<%- include ('./partials/header.ejs') %>
<body>
  <%- include ('./partials/navbar.ejs') %>
  <br />
  <div class="container">
    <div class="card" id="form-ask">
      <div class="card-header">
        <h3>Ask Question</h3>
      </div>
      <div class="card-body">
        <form action="/save-question" method="post">
          <label for="">Title</label>
          <input
            type="text"
            name="title"
            class="form-control"
            id="title"
            placeholder="Title"
          />
          <br />
          <label for="">Description</label>
          <textarea
            name="description"
            class="form-control"
            placeholder="Ask your question"
            id="description"
            cols="30"
            rows="10"
          ></textarea>
          <br />
          <button type="submit" class="btn btn-success btn-lg btn-block">
            Send Question
          </button>
        </form>
      </div>
    </div>
  </div>
</body>
<%- include ('./partials/footer.ejs') %>
